<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Mode Toggle Button (Positioning fixed) -->
    <ImageButton
        android:id="@+id/modeToggleButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mode_toggle_background"
        android:contentDescription="Toggle Dark Mode"
        android:src="@drawable/ic_brightness"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Counter Text -->
    <TextView
        android:id="@+id/counterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="96sp"
        android:textColor="?android:attr/textColorPrimary"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtle Label -->
    <TextView
        android:id="@+id/subtleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasbih"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        android:alpha="0.7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/counterTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Reset Button -->
    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/reset_button_background"
        android:contentDescription="Reset Counter"
        android:src="@drawable/ic_reset_minimal"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>