<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) -->
    <style name="Theme.TasbihMinimalis" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryDark">@color/primary_dark_dark_mode</item>
        <item name="colorAccent">@color/accent_dark_mode</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark_mode</item>
        <item name="android:textColorPrimary">@color/on_background_dark_mode</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark_mode</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text appearance -->
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>